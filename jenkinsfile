pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/harsimrankaur2493/jenkins-1.git'
      }
    }
    stage('Build Docker Image') {
      steps {
        script {
          dockerImage = docker.build("my-app:latest")
        }
      }
    }
    stage('Run Docker Container') {
      steps {
        script {
          dockerImage.run("-p 5000:5000 --rm")
        }
      }
    }
  }
}
